body{
 background:black;
 color: white;
 font-family:Arial, Helvetica, sans-serif;
 font-weight:100;
}

.header{
 width:100%;
 background:#2B383F;
 height:100px;
 float:left;
}

#header{
 height:100px;
 margin-left:50px;
 margin-right:50px;
 margin-top:20px;
}

#footer{
 float:right;
 border-top-style: dotted ;
 border-top-color: #5F6C72;
 border-top-width: 1px;
 margin-top:20px;
 margin-left:50px;
 margin-right:50px;
}

#footer .text{
 float:right;
 font-size:12px; 
 color:#5F6C72;
 padding:15px;
}

a{
//  color:white;
  color:#3198C4;
}

a:link{
  text-decoration:none;
}

a:hover{
  color:#3198C4;
}

#header .title{
 float:left;
 font-size:30px; 
 font-weight: bold;
}

#header .subtitle{
 float:left;
 top:60;
 left:15%;
 font-size:12px; 
 max-width:40%;
}

#header .settings{
 float:right;
 font-size:14px; 
// padding-left:20px;
}

.whitebox{
 color:#5F6C72;
 width:93%;
 height:65%;
 background:white;
 float:left;
 margin-left:30px;
 margin-right:30px;
 -moz-border-radius: 3px;
 border-radius: 3px;
}


.whitebox .options{
 background:white;

 float:left;
 width: 30%;
 height: 90%;
 border-right-style: dotted ;
 border-right-color: #2B383F;
 border-right-width: 1px;
 margin:20px;
}

.whitebox .options .title{
 margin-top:5px;
 color:#3198C4;
 font-size:25px;
}

.whitebox .option{
 font-size:16px;
 margin-right:20px;
 margin-top:20px;
}

.whitebox .selected{
 font-size:16px;
 color:white;
 background:#5F6C72;
 padding:10px;
}


.whitebox .actions{
 background:white;
 height: 90%;
 margin:20px;
}


li{
 color:#3198C4;
 list-style:inside;
 padding:5px;
}

.normal{
 color:#bbbbbb;
 font-size: 14px;
}

.inline_form{
 color:#bbbbbb;
 font-size: 12px;
}

.it{
 font-style:italic;
}

form .input{
  height:30px;
  width:300px;
  font-size: 14px;
  margin-top:15px;
  color: #5F6C72;
  border: 1px outset;
  border-color:#bbbbbb;
  -moz-border-radius: 3px;
  border-radius: 3px;
}

.submit{
 float:right;
 margin-bottom:10px;
 background: #3198C4;
 color:white;
 padding:10px;
 border:0;
 font-size:16px;
}

.butt{
 background: #3198C4;
 color:white;
 padding:10px;
 border:0;
 font-size:16px;
 float:left;
}

/*interests*/

.nav{
 font-size:20px;
 padding:10px;
}

.selected{
  background: #3198C4;
  color:white;
}

.yellowbox{
 color: #5F6C72;
 width:93%;
 height:24%;
 background: #ffffcc;
 float:left;
 margin-left:30px;
 margin-right:30px;
 -moz-border-radius: 3px;
 border-radius: 3px;
}

.yellowbox .options{
 float:left;
