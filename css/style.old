}

.yellowbox .actions{
 height: 90%;
 margin:20px;
}

.yellowbox .actions .title{
 margin-top:5px;
 color:#3198C4;
 font-size:25px;
}

.bluebox{
 float:left;
 color:white;
 background:#3198C4;
 width:93%;
 height:10%;
 margin-left:30px;
 margin-right:30px;
 margin-top:20px;
 -moz-border-radius: 3px;
 border-radius: 3px;
}


.bluebox .title{
 padding:20px;
 font-size:16px;
}

.interests{
 float:left;
 width:93%;
 min-height:30%;
 margin-left:50px;
 margin-right:50px;
 margin-top:20px;
 -moz-border-radius: 3px;
 border-radius: 3px;
}

.interest a{
color:white;
}

.interest{
 float:left;
 margin:1px;
}

.weight_high{
 background:#aaaaaa;
 font-size:20;
 padding:10px;
}
.weight_med{
 background:#777777; 
 font-size:16;
 padding:13px;
}
.weight_low{
 background:#555555; 
 font-size:14;
 padding:15px;
}

.new{
 background:#3198C4; 
 color:white;
}

.close{
 position:relative;
}

.close img{
 position:absolute;
 top:0;
 right:0;
}


/*analytics*/

.analytics{
